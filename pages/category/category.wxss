page {
  height: 100%;
}
.category {
  height: 100%;
}
.category .cates {
  height: calc(100vh - 90rpx);
  display: flex;
}
.category .cates .left_menu {
  height: 100%;
  flex: 2;
}
.category .cates .left_menu .menu_item {
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 30rpx;
  height: 80rpx;
}
.category .cates .left_menu .active {
  color: var(--themeColor);
  border-left: 10rpx solid var(--themeColor);
}
.category .cates .right_content {
  height: 100%;
  flex: 5;
}
.category .cates .right_content .content_box .content_title {
  height: 80rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
.category .cates .right_content .content_box .content_title .text {
  color: #ccc;
  padding: 0 10rpx;
}
.category .cates .right_content .content_box .menu_box {
  width: 100%;
  display: flex;
  flex-wrap: wrap;
}
.category .cates .right_content .content_box .menu_box .menu_item {
  width: 33.33%;
  text-align: center;
  margin-top: 10rpx;
}
.category .cates .right_content .content_box .menu_box .menu_item image {
  width: 50%;
}
