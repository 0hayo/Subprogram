.pay .address .address_info {
  padding: 20rpx;
}
.pay .address .address_info .user_info {
  display: flex;
  justify-content: space-between;
}
.pay .cart_contetn .cart_title {
  padding: 20rpx;
  color: var(--themeColor);
  font-size: 34rpx;
  font-weight: 600;
  border-top: 1px solid var(--themeColor);
  border-bottom: 1px solid var(--themeColor);
}
.pay .cart_contetn .cart_main .cart_item {
  display: flex;
  justify-content: space-between;
  padding: 10rpx;
  border-bottom: 1rpx solid #f5f5f5;
}
.pay .cart_contetn .cart_main .cart_item .checkbox {
  flex: 1;
  display: flex;
  justify-content: center;
  align-items: center;
}
.pay .cart_contetn .cart_main .cart_item .item_img {
  flex: 2;
}
.pay .cart_contetn .cart_main .cart_item .item_img image {
  width: 80%;
}
.pay .cart_contetn .cart_main .cart_item .item_info {
  flex: 4;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
}
.pay .cart_contetn .cart_main .cart_item .item_info .info_top {
  display: -webkit-box;
  overflow: hidden;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
}
.pay .cart_contetn .cart_main .cart_item .item_info .info_bottom {
  display: flex;
  justify-content: space-between;
}
.pay .cart_contetn .cart_main .cart_item .item_info .info_bottom .item_price {
  color: var(--themeColor);
  font-size: 34rpx;
}
.pay .cart_contetn .cart_main .cart_item .item_info .info_bottom .item_step {
  display: flex;
  justify-content: space-between;
}
.pay .cart_contetn .cart_main .cart_item .item_info .info_bottom .item_step .step_text {
  width: 50rpx;
  height: 50rpx;
  color: #aaa;
  display: flex;
  justify-content: center;
  align-items: center;
}
.pay .footer {
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 90rpx;
  display: flex;
  border-top: 1rpx solid #ccc;
}
.pay .footer .total_price_wrap {
  flex: 5;
  text-align: right;
  padding-right: 15rpx;
}
.pay .footer .total_price_wrap .total_price .total_price_text {
  font-size: 32rpx;
  color: var(--themeColor);
}
.pay .footer .total_price_wrap .total_price_text1 {
  font-size: 24rpx;
}
.pay .footer .total_pay {
  flex: 3;
  display: flex;
  justify-content: center;
  align-items: center;
  color: #fff;
  background-color: var(--themeColor);
}
