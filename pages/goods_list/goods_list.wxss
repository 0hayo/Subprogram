.goods_list .goods_content {
  width: 100%;
  height: calc(100vh - 180rpx);
}
.goods_list .goods_content .goods_box {
  width: 100%;
  display: flex;
  justify-content: center;
}
.goods_list .goods_content .goods_box .goods_img {
  flex: 2;
  display: flex;
  justify-content: center;
  align-items: center;
}
.goods_list .goods_content .goods_box .goods_img image {
  width: 70%;
}
.goods_list .goods_content .goods_box .goods_info {
  flex: 3;
  display: flex;
  flex-flow: column;
  justify-content: space-around;
}
.goods_list .goods_content .goods_box .goods_info .goods_title {
  display: -webkit-box;
  overflow: hidden;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
}
.goods_list .goods_content .goods_box .goods_info .goods_price {
  color: var(--themeColor);
  font-size: 32rpx;
}
